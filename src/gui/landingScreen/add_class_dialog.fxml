<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<DialogPane maxHeight="-Infinity" maxWidth="-Infinity" minHeight="-Infinity" minWidth="-Infinity" prefHeight="300.0"
            prefWidth="480.0" xmlns="http://javafx.com/javafx/11.0.1" xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="gui.landingScreen.AddClassController">
    <content>
        <VBox>
            <VBox alignment="CENTER" prefHeight="200.0" prefWidth="100.0" spacing="30">
                <VBox>
                    <Label text="Class"/>
                    <TextField fx:id="classField" promptText="S2/IT2"/>
                    <VBox.margin>
                        <Insets left="100.0" right="100.0"/>
                    </VBox.margin>
                </VBox>
                <VBox>
                    <Label text="Year"/>
                    <TextField fx:id="yearField" promptText="SE/2nd"/>
                    <VBox.margin>
                        <Insets left="100.0" right="100.0"/>
                    </VBox.margin>
                </VBox>
                <VBox>
                    <Label text="Batch"/>
                    <TextField fx:id="branchField" promptText="IT"/>
                    <VBox.margin>
                        <Insets left="100.0" right="100.0"/>
                    </VBox.margin>
                </VBox>
                <VBox.margin>
                    <Insets top="25.0" bottom="25.0"/>
                </VBox.margin>
            </VBox>
            <HBox alignment="CENTER_RIGHT" spacing="20.0">
                <Button text="Save" fx:id="saveBtn" onAction="#saveBtnClick"/>
                <Button text="Close" onAction="#closeBtnClick"/>
                <VBox.margin>
                    <Insets right="20.0"/>
                </VBox.margin>
            </HBox>
        </VBox>
    </content>
</DialogPane>
