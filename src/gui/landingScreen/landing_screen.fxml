<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.Font?>
<AnchorPane prefHeight="540.0" prefWidth="960.0" xmlns="http://javafx.com/javafx/11.0.1"
            xmlns:fx="http://javafx.com/fxml/1" fx:controller="gui.landingScreen.LandingScreenController">
    <VBox alignment="CENTER">
        <VBox alignment="CENTER" prefHeight="540.0" prefWidth="960.0">
            <Label text="Attendance Dilemma">
                <font>
                    <Font size="46.0"/>
                </font>
                <VBox.margin>
                    <Insets bottom="100.0"/>
                </VBox.margin>
            </Label>
            <HBox alignment="CENTER" spacing="200.0">
                <Button fx:id="addRecordBtn" alignment="TOP_CENTER" mnemonicParsing="false" onAction="#addRecordClick"
                        prefHeight="26.0" prefWidth="114.0" text="Add record" textAlignment="CENTER"/>
                <Button alignment="BASELINE_CENTER" layoutX="10.0" layoutY="10.0" mnemonicParsing="false"
                        onAction="#addClassClick" prefHeight="26.0" prefWidth="114.0" text="Add Class"/>
                <Button alignment="TOP_CENTER" mnemonicParsing="false" onAction="#addStudentClick" prefHeight="26.0"
                        prefWidth="114.0" text="Add Student" textAlignment="CENTER"/>
                <VBox.margin>
                    <Insets bottom="50" top="50"/>
                </VBox.margin>
            </HBox>
            <HBox alignment="CENTER" spacing="200.0">
                <Button alignment="BASELINE_CENTER" mnemonicParsing="false" onAction="#showDefaulterClick"
                        prefHeight="26.0"
                        prefWidth="114.0" text="Defaulter list"/>
                <Button alignment="TOP_CENTER" mnemonicParsing="false" onAction="#showRecordClick" prefHeight="26.0"
                        prefWidth="114.0" text="Show record" textAlignment="CENTER"/>
                <VBox.margin>
                    <Insets bottom="50"/>
                </VBox.margin>
            </HBox>
            <Label text="Made with ❤ by Darshan, Abhay, Chirag"/>
        </VBox>
    </VBox>
</AnchorPane>
