<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<BorderPane xmlns:fx="http://javafx.com/fxml/1" prefHeight="540.0" prefWidth="960.0"
            xmlns="http://javafx.com/javafx/11.0.1" fx:controller="gui.addStudent.AddStudentController">
    <top>
        <HBox alignment="CENTER" spacing="100.0">
            <Button fx:id="backBtn" alignment="TOP_CENTER" mnemonicParsing="false" onAction="#backBtnClicked"
                    prefHeight="26.0" prefWidth="114.0" text="Back" textAlignment="CENTER">
                <HBox.margin>
                    <Insets bottom="50.0" top="50"/>
                </HBox.margin>
            </Button>
            <Button fx:id="loadFile" alignment="TOP_CENTER" mnemonicParsing="false" onAction="#showFileChooser"
                    prefHeight="26.0" prefWidth="114.0" text="Load File" textAlignment="CENTER">
                <HBox.margin>
                    <Insets bottom="50.0" top="50"/>
                </HBox.margin>
            </Button>
            <Button alignment="TOP_CENTER" mnemonicParsing="false" onAction="#addStudentClick" prefHeight="26.0"
                    prefWidth="114.0" text="Add Student" textAlignment="CENTER"/>
            <Button alignment="TOP_CENTER" mnemonicParsing="false" onAction="#saveBtnClicked" prefHeight="26.0"
                    prefWidth="114.0" text="Save" textAlignment="CENTER">
                <HBox.margin>
                    <Insets bottom="50.0" top="50"/>
                </HBox.margin>
            </Button>
        </HBox>
    </top>
    <center>
        <TableView fx:id="studentTableView" prefHeight="381.0" prefWidth="960.0" BorderPane.alignment="CENTER"/>

    </center>
</BorderPane>
